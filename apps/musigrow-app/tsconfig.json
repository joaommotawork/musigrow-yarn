{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@tina/*": [".tina/*"],
			"@app/*": ["src/app/*"],
			"@features/*": ["src/features/*"],
			"@services/*": ["src/services/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@public/*": ["src/public/*"],
			"@hooks/*": ["src/hooks/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"],
			"@constants/*": ["src/constants/*"],
			"@styles/*": ["src/styles/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/pages/demo/blog/[filename].js",
		"src/pages/demo/blog/[filename].js"
	],
	"exclude": ["node_modules"]
}
